<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Front</th>
      <th>Back</th>
      <th>Mnemonic</th>
      <th>Category</th>
      <th>Memorized</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.front %></td>
        <td><%= card.back %></td>
        <td><%= card.mnemonic %></td>
        <td><%= card.category_id %></td>
        <td><%= card.memorized %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

